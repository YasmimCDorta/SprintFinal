@model IEnumerable<Somativa.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-2">Compras</h1>

<p>
    <a asp-action="Create" class="btn" style="background-color:#F28070;">Criar</a>
</p>
<table class="table table-striped table-hover" style="background-color:#F4B1A8; ">
    <thead class="table =" style="background-color:#F28070; ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CompraId" class="p-2"> <svg bootstrap-icon="PencilSquare" class="text-dark " width="20" height="20"></svg></a>
                    <a asp-action="Details" asp-route-id="@item.CompraId" class=" p-2"><svg bootstrap-icon="ZoomIn" width="20" height="20" class=" text-dark "></svg></a>
                    <a asp-action="Delete" asp-route-id="@item.CompraId" class="p-2"><svg bootstrap-icon="Trash" width="20" height="20" class=" text-dark "></svg></a>
                    <a asp-controller="CompraItems" asp-action="Index" ><svg bootstrap-icon="ListUl" width="20" height="20" class=" text-dark "></svg></a>
                </td>
        </tr>
}
    </tbody>
</table>
