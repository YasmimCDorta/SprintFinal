@model IEnumerable<Somativa.Models.Movimentacao>

@{
	ViewData["Title"] = "RelatMov";
	var prod = ViewData["Produtos"] as List<Produto>;
	prod.Insert(0, new Produto { ProdutoId = new Guid(), Nome = "Todos" });
}

<h1 class="my-2">Relatorio de Movimentação</h1>
<a class="btn " style="background-color:steelblue; font-family:Bahnschrift; " data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
	Filtros
</a>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel" style="background-color:lightsteelblue; ">
	<div class="offcanvas-header">
		<h5 class="offcanvas-title" id="offcanvasExampleLabel">FILTROS</h5>
		<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
	</div>
	<div class="offcanvas-body " >
		<form>
			<div >
				<label class="col-4 m-2">Data início</label>
				<input name="inDataIni" type="date" class="ms-3 me-3 col-4" />
				<label class="col-4 m-2">Data fim</label>
				<input name="inDataFim" type="date" class="ms-3 me-3 col-4" />
				<label class="col-4 m-2">Tipo de movimentação</label>
				<select name="inTipo" class="ms-3 me-3 col-4">
					<option value="0">Todos</option>
					<option value="1">Entradas</option>
					<option value="2">Saídas</option>
				</select>
				<label class="col-4 m-2">Produto</label>
				<select name="inProduto" class="ms-3 me-3 col-4">
					@foreach (var item in prod)
					{
						<option value="@item.Nome">@item.Nome</option>
					}
				</select>
				<button asp-action="SearchMov" class="btn  text-dark col-6 my-3 mb-2" style="background-color:navajowhite;">Filtrar</button>
			</div>
		</form>
	</div>
</div>
