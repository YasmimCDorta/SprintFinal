@model Somativa.Models.Venda

@{
    ViewData["Title"] = "Details";
}

<div class="container align-items-center" style="background-color:#A2DCF6; width:500px; align-items:center;border-radius:50px; margin-top:30px;">
    <br />
    <div>
        <h3 class="text-center">Detalhes</h3>
        <div class="container p-5">
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nota)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Nota)
                </dd>
                <dt class="col-sm-5 ">
                    @Html.DisplayNameFor(model => model.Cliente)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Cliente.Nome)
                </dd>
                <dt class="col-sm-5 ">
                    @Html.DisplayNameFor(model => model.DataHora)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.DataHora)
                </dd>
            </dl>
            <div class="align-content-center" style="justify-content:space-between; margin-left:120px; margin-top:15px;">
                <a asp-action="Edit" asp-route-id="@Model?.VendaId" class="btn btn-outline-dark " style="background-color:#46AFDE;">Editar</a>



                <a asp-action="Index" class="btn btn-outline-dark " style="background-color:burlywood;">Voltar</a>

            </div>
        </div>
    </div>
</div>