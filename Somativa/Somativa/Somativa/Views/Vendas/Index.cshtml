@model IEnumerable<Somativa.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-2">Vendas</h1>

<p>
    <a asp-action="Create" class="btn" style="background-color:#46AFDE ;">Criar </a>
</p>
<table class="table table-striped table-hover" style="background-color:#A2DCF6; ">
    <thead class="table =" style="background-color:#4EC8FF; ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.VendaId" class="p-2"> <svg bootstrap-icon="PencilSquare" class="text-dark " width="20" height="20"></svg></a>
                    <a asp-action="Details" asp-route-id="@item.VendaId" class=" p-2"><svg bootstrap-icon="ZoomIn" width="20" height="20" class=" text-dark "></svg></a>
                    <a asp-action="Delete" asp-route-id="@item.VendaId" class="p-2"><svg bootstrap-icon="Trash" width="20" height="20" class=" text-dark "></svg></a>
                    <a asp-controller="VendaItems" asp-action="Index" asp-route-id="@item.VendaId"><svg bootstrap-icon="ListUl" width="20" height="20" class=" text-dark "></svg></a>
            </td>
        </tr>
}
    </tbody>
</table>
