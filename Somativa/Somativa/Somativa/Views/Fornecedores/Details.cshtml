@model Somativa.Models.Fornecedor

@{
    ViewData["Title"] = "Details";
}

<div class="container align-items-center" style="background-color:#FFDA55; width:500px; align-items:center;border-radius:50px; margin-top:30px;">
    <br />
    <div>
        <h3 class="text-center">Detalhes</h3>
        <div class="container p-5">
            <div class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-7 ">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Cnpj)
                </dt>
                <dd class="col-sm-7 ">
                    @Html.DisplayFor(model => model.Cnpj)
                </dd>

                <div class="align-content-center" style="justify-content:space-between; margin-left:120px; margin-top:15px;">
                    <a asp-action="Edit" asp-route-id="@Model?.FornecedorId" class="btn btn-outline-dark " style="background-color:#FFDA90;">Editar</a>



                    <a asp-action="Index" class="btn btn-outline-dark " style="background-color:burlywood;">Voltar</a>

                </div>
            </div>
        </div>
    </div>
</div>