@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Create";
    var VendaIdAux = ViewData["VendaId"]; 
}
<div class="container" style="background-color:#B3F6A2; width:500px; align-items:center;border-radius:50px;margin-top:30px;margin-bottom:60px;">
    <br />
    <h3 class="text-center">Criar</h3>
    <div>
        <div class="container p-4">
            <form asp-action="Create" style="align-content:center;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="VendaId" class="control-label"></label>
                <input asp-for="VendaId" value="@VendaIdAux" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select id="CodigoProd" asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId" onchange="atualizaPreco();"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input id="Valor" asp-for="Unitario" class="form-control" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
                <div class="align-content-center" style="justify-content:space-between; margin-left:120px; margin-top:30px;">
                    <input type="submit" value="Criar" class="btn btn-outline-dark " style="background-color:#A4DE46;" />
                    <a asp-action="Index" asp-route-id="@ViewBag.VendaId" class="btn btn-outline-dark " style="background-color:burlywood;">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
