@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="background-color:#B3F6A2; width:500px; margin-top:30px; align-items:center;border-radius:50px;">
    <br />
    <h3 class="text-center">Editar</h3>
    <div>
        <div class="container p-5">
            <form asp-action="Edit" style="align-content:center;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaItemId" />
            <div class="form-group">
                <label asp-for="VendaId" class="control-label"></label>
                <select asp-for="VendaId" class="form-control" asp-items="ViewBag.VendaId"></select>
                <span asp-validation-for="VendaId" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                    <span asp-validation-for="ProdutoId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input id="Valor" asp-for="Unitario" class="form-control" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
                <div class="align-content-center" style="justify-content:space-between; margin-left:120px; margin-top:15px;">
                    <input type="submit" value="Save" class="btn btn-outline-dark " style="background-color:#A4DE46;" />
                    <a asp-action="Index" class="btn btn-outline-dark " asp-route-id="@Model.VendaId" style="background-color:burlywood;">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
