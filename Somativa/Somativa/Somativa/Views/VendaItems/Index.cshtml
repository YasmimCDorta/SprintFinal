@model IEnumerable<Somativa.Models.VendaItem>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-2">Venda Itens</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewData["VendaId"]" class="btn" style="background-color:#A4DE46;">Criar</a>
</p>
<table class="table table-striped table-hover" style="background-color:#B3F6A2; ">
    <thead class="table =" style="background-color:#7CFF4E; ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.Nota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unitario)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VendaItemId" class="p-2"> <svg bootstrap-icon="PencilSquare" class="text-dark " width="20" height="20"></svg></a>
                    <a asp-action="Details" asp-route-id="@item.VendaItemId" class=" p-2"><svg bootstrap-icon="ZoomIn" width="20" height="20" class=" text-dark "></svg></a>
                    <a asp-action="Delete" asp-route-id="@item.VendaItemId" class="p-2"><svg bootstrap-icon="Trash" width="20" height="20" class=" text-dark "></svg></a>
                </td>
            </tr>
        }
    </tbody>
</table>