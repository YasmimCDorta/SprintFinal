@model IEnumerable<Somativa.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-2">Categorias</h1>

<p>
    <a asp-action="Create" class="btn m-2 text-light" style="background-color:#462E54;">Criar</a>
</p>
<table class="table table-striped table-hover" style="background-color:#D6B6F6; ">
    <thead class="table =" style="background-color:#8454B4; ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="p-2"> <svg bootstrap-icon="PencilSquare" class="text-dark " width="20" height="20"></svg></a>
                    <a asp-action="Details" asp-route-id="@item.CategoriaId" class=" p-2"><svg bootstrap-icon="ZoomIn" width="20" height="20" class=" text-dark "></svg></a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="p-2"><svg bootstrap-icon="Trash" width="20" height="20" class=" text-dark "></svg></a>
                </td>
        </tr>
}
    </tbody>
</table>
