@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Details";
}
<div class="container align-items-center" style="background-color:#FF0091; width:500px; align-items:center;border-radius:50px; margin-top:30px;">
    <br />
    <div>
        <h3 class="text-center">Detalhes</h3>
        <div class="container p-5">
            <div class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-7 ">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
                <dt class="col-sm-5 ">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-7 ">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class="col-sm-5 ">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-7  ">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-7 ">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>
                <dd class="col-sm-7 ">
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>
                <div class="align-content-center" style="justify-content:space-between; margin-left:120px;">
                    <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn btn-outline-dark " style="background-color:#FF5DC8;">Editar</a>



                    <a asp-action="Index" class="btn btn-outline-dark " style="background-color:burlywood;">Voltar</a>

                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>